<ui:Page x:Class="PvzLauncherRemake.Pages.PageDownload"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PvzLauncherRemake.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:ctrl="clr-namespace:PvzLauncherRemake.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageDownload" Loaded="Page_Loaded">

    <Grid>
        <TabControl x:Name="tabControl_Main" Style="{StaticResource TabControlPivotStyle}" SelectionChanged="tabControl_Main_SelectionChanged">
            <TabItem Header="游戏下载">
                <TabControl Style="{StaticResource TabControlPivotStyle}" Margin="0,0,0,10" SelectionChanged="tabControl_Main_SelectionChanged">
                    <TabItem Header="中文原版">
                        <ctrl:UserScrollViewer>
                            <StackPanel x:Name="stackPanel_zhOrigin" Tag="game" Background="Transparent" VirtualizingPanel.ScrollUnit="Pixel">
                            </StackPanel>
                        </ctrl:UserScrollViewer>
                    </TabItem>
                    <TabItem Header="中文改版">
                        <ctrl:UserScrollViewer>
                            <StackPanel x:Name="stackPanel_zhRevision" Tag="game" Background="#00000000" VirtualizingPanel.ScrollUnit="Pixel">
                            </StackPanel>
                        </ctrl:UserScrollViewer>
                    </TabItem>
                    <TabItem Header="英文原版">
                        <ctrl:UserScrollViewer>
                            <StackPanel x:Name="stackPanel_enOrigin" Tag="game" Background="#00000000" VirtualizingPanel.ScrollUnit="Pixel">
                            </StackPanel>
                        </ctrl:UserScrollViewer>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="修改器下载">
                <ctrl:UserScrollViewer>
                    <StackPanel x:Name="stackPanel_trainer" Tag="trainer" Background="#00000000" VirtualizingPanel.ScrollUnit="Pixel">
                    </StackPanel>
                </ctrl:UserScrollViewer>
            </TabItem>
        </TabControl>
        <Grid x:Name="grid_Loading" Visibility="Hidden">
            <ui:ProgressRing IsActive="True" Width="50" Height="50"/>
            <TextBlock x:Name="textBlock_Loading" Text="加载中..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0"/>
            <ui:ProgressBar x:Name="progressBar_Loading" HorizontalAlignment="Center" Width="250" Margin="0,120,0,0" Background="#66C8C8C8" Visibility="Hidden"/>
        </Grid>
    </Grid>
</ui:Page>
