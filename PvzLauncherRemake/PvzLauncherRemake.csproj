<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <NoWarn>NU1701</NoWarn>

    <!-- 只保留指定的语言文化，其余全部排除 -->
    <SatelliteResourceLanguages>none</SatelliteResourceLanguages>

    <!-- 可选：更严格模式，防止意外打包其他语言 -->
    <ExcludeAllSatelliteAssemblies>true</ExcludeAllSatelliteAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Dialogs\**" />
    <EmbeddedResource Remove="Dialogs\**" />
    <None Remove="Dialogs\**" />
    <Page Remove="Dialogs\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\bitmap\background.png" />
    <None Remove="Assets\Icon\Icon.ico" />
    <None Remove="Splash\SplashScreen.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\bitmap\background.png" />
    <Content Include="Assets\Icon\Icon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HuaZi.Library" Version="2025.11.27.1" />
    <PackageReference Include="Markdig" Version="0.44.0" />
    <PackageReference Include="MdXaml" Version="1.27.0" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3650-prerelease" />
    <PackageReference Include="ModernWpfUI" Version="0.9.7-preview.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Notifications.Wpf" Version="0.1.1" />
    <PackageReference Include="SharpCompress" Version="0.42.0" />
  </ItemGroup>

  <ItemGroup>
    <SplashScreen Include="Splash\SplashScreen.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </SplashScreen>
  </ItemGroup>

</Project>
