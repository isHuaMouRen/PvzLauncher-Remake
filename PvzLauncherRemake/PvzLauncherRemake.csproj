<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <NoWarn>NU1701</NoWarn>

    <!-- 只保留指定的语言文化，其余全部排除 -->
    <SatelliteResourceLanguages>none</SatelliteResourceLanguages>

    <!-- 可选：更严格模式，防止意外打包其他语言 -->
    <ExcludeAllSatelliteAssemblies>true</ExcludeAllSatelliteAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\bitmap\background.png" />
    <None Remove="Assets\Icon\Icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\bitmap\background.png" />
    <Content Include="Assets\Icon\Icon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HuaZi.Library" Version="2025.11.7.1" />
    <PackageReference Include="MdXaml" Version="1.27.0" />
    <PackageReference Include="ModernWpfUI" Version="0.9.7-preview.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Notifications.Wpf" Version="0.1.1" />
    <PackageReference Include="SharpCompress" Version="0.41.0" />
    <PackageReference Include="System.Drawing.Common" Version="10.0.0" />
  </ItemGroup>

</Project>
