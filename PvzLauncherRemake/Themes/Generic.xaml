<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PvzLauncherRemake.Controls"
    xmlns:ui="http://schemas.modernwpf.com/2019">

    <Style TargetType="{x:Type local:UserCard}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UserCard}">
                    <Grid Margin="10">
                        <Rectangle Fill="#FFE6E6E6" RadiusX="10" RadiusY="10"/>
                        <ContentPresenter Margin="10"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>